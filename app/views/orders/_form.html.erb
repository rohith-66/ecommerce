    <%= form.label :date_of_order %>
    <%= form.date_select :date_of_order, class:"form-control"  %>
  </div><br/>

  <div class="field form-group">
    
    <%= form.text_field :billing_address, class:"form-control", placeholder:"Billing Address "  %>
  </div><br/>

  <div class="field form-group">
   
    <%= form.text_field :shipping_address, class:"form-control", placeholder:" Shipping Address"  %>
  </div><br/>

  <div class="field form-group">
    <%= form.text_field :user_id,id: :orders_customer_id , class:"form-control", value: current_user.id  ,type: :hidden %>
