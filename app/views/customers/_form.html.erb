<%= form_with(model: customer) do |form| %>
  <% if customer.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(customer.errors.count, "error") %> prohibited this customer from being saved:</h2>

      <ul>
        <% customer.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
<br/>
  <div class="field form-group">
    <%= form.text_field :name , class:"form-control", placeholder:"Name " %>
  </div><br/>

  <div class="field form-group">
    <%= form.number_field :phone, class:"form-control", placeholder:"Phone Number "  %>
  </div><br/>

  <div class="field form-group">
    <%= form.text_field :email, class:"form-control", placeholder:"Email Address"  %>
  </div><br/>

  <div class="field form-group">
    <%= form.text_field :address, class:"form-control", placeholder:"Address"  %>
  </div><br/>

  <div class="field form-group">
    <%= form.text_field :user_id,id: :customer_user_id , class:"form-control", value: current_user.id  ,type: :hidden %>
  </div><br/>
  
  <div class="actions">
    <%= form.submit class:"btn btn-info"%>
  </div><br/>
<% end %>
