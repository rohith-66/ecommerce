<%= form_with(model: address) do |form| %>
  <% if address.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(address.errors.count, "error") %> prohibited this address from being saved:</h2>

      <ul>
        <% address.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
<br/>
  <div class="field form-group">
    
    <%= form.text_field :name, class:"form-control", placeholder:"Name" %>
  </div><br/>

  <div class="field form-group">
    
    <%= form.number_field :phone, class:"form-control", placeholder:"Phone Number" %>
  </div><br/>

  <div class="field form-group">
    
    <%= form.text_area :add_lane1, class:"form-control", placeholder:"Address Lane 1" %>
  </div><br/>

  <div class="field form-group">
   
    <%= form.text_area :add_lane2, class:"form-control", placeholder:"Address Lane 2" %>
  </div><br/>

  <div class="field form-group">
    
    <%= form.text_field :city , class:"form-control", placeholder:"City" %>
  </div><br/>

  <div class="field form-group">
    
    <%= form.text_field :state, class:"form-control", placeholder:"State" %>
  </div><br/>

  <div class="field">
   
    <%= form.text_field :country , class:"form-control", placeholder:"Country" %>
  </div><br/>

  <div class="field form-group">
   
    <%= form.text_field :pin, class:"form-control", placeholder:"Pin Code" %>
  </div><br/>

  <div class="field form-group">
    <%= form.text_field :user_id,id: :addresses_user_id , class:"form-control", value: current_user.id  ,type: :hidden %>
  </div><br/><br/>

  <div class="actions">
    <%= form.submit class:"btn btn-info"%>
  </div><br/>
<% end %>
